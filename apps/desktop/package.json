    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "formik": "2.4.9",
    "framer-motion": "12.29.0",
    "lucide-react": "0.562.0",
    "next": "16.1.4",
    "next-themes": "0.4.6",
    "radix-ui": "1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "shadcn": "3.7.0",
    "sonner": "2.0.7",
