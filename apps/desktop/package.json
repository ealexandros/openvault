    "tailwindcss": "4.1.18",
    "typescript": "5.9.2"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ],
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx,ejs}": [
      "bun run format:write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "bun run lint:fix --max-warnings=0 --no-warn-ignored"
