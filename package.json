{
  "name": "openvault",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "prettier:check": "turbo run prettier:check",
    "prettier:write": "turbo run prettier:write",
    "typecheck": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "eslint": "9.39.2"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx,ejs,prisma}": [
      "turbo run prettier:write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "turbo run lint:fix --max-warnings=0"
    ]
  },
  "packageManager": "bun@1.3.0"
}
